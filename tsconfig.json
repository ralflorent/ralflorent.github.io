{
    "compilerOptions": {
        "baseUrl": "src",
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "build",
        "sourceMap": true,
        "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
        "jsx": "react"
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
